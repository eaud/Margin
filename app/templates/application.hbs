<body class="stellar">
  <div class="container">
    <header class="navbar">
      <div class="">
{{#if session.isAuthenticated}}
        <a {{action 'logout'}}>Logout</a>
{{else}}

        <!-- <button {{action 'openModal' 'users/new'}}>Open modal</button> -->
        <div class="col-md-2">
          <h5>{{#link-to 'users.new'}}Sign Up{{/link-to}}</h5>
        </div>
        <div class="col-md-1">
          <h5>{{#link-to 'login'}}Login{{/link-to}}</h5>
        </div>
        <div class="col-md-12">
          {{outlet login}}
        </div>
{{/if}}
      </div>
    </header>
    <h2 id="title">{{link-to "MARGIN" 'application'}}</h2>

{{#if session.isAuthenticated}}
    <div class="mainmenu-block">
      <h4>{{#link-to 'notebooks'}}Show Notebooks{{/link-to}}</h4>
      <h4>{{#link-to 'tags'}}Show Tags{{/link-to}}</h4>
      <ul>
        {{outlet 'sidebar'}}
      </ul>
    </div>
    <div class="main-wrapper">
      <div class="view-wrapper">
          {{outlet 'editor'}}

        </div>
      </div>
{{else}}
    <div id="unauthorized">

          <div class="col-md-12">
            <h4>
              Hi there! Margin is coming soon... (like, any day! ETA 02/24/16!)
            </h4>
            <p>
              Come back soon for an excellent Ember.js-based single page app to take your code notes.
            </p>
          </div>
    </div>
{{/if}}



  </div>
</body>
